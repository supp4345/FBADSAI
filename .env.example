# AI Facebook Ads Pro - Environment Variables Template
# Copy this file to .env and fill in your actual values

# App Configuration
NODE_ENV=development
HOST=http://localhost:3000

# Shopify App Credentials
# Get these from your Shopify Partner Dashboard
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET_KEY=your_shopify_secret_key_here

# Facebook App Credentials  
# Get these from Facebook Developer Console
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# Google Gemini AI
# Get this from Google AI Studio
GEMINI_API_KEY=your_gemini_api_key_here

# Database Configuration
# For development: SQLite (default)
# For production: PostgreSQL recommended
POSTGRES_URL=postgres://username:password@host:port/database

# Session Security
# Generate a strong random string for production
SESSION_SECRET=your_super_secret_session_key_change_this_in_production

# Optional: Webhook Verification
WEBHOOK_SECRET=your_webhook_secret_here

# Optional: Redis for Session Storage (Production)
REDIS_URL=redis://username:password@host:port

# Optional: Logging Configuration
LOG_LEVEL=info

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100